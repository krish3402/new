@import url(http://fonts.googleapis.com/css?family=Lato:100,300,400,700);
@import url(https://raw.github.com/FortAwesome/Font-Awesome/master/docs/assets/css/font-awesome.min.css);

#wrap {
  margin:81px 100px 50px 22%;
  display: inline-block;
  position: relative;
  height: 60px;
  float: left;
  padding: 0;
  position: relative;
}
.TextS{
float:left;
}
.TextS input[type="text"] {
  height: 60px;
  font-size:34px;
  display: inline-block;
  font-family: "Lato";
  font-weight: 100;
  border: none;
  outline: none;
  color: #f6a396;
  padding: 3px;
  padding-right: 60px;
  width: 0px;
  position: absolute;
  top: 0;
  right: 0;
  background: none;
  z-index: 3;
  transition: width .4s cubic-bezier(0.000, 0.795, 0.000, 1.000);
  cursor: pointer;
}
.TextS input[type="text"]:focus:hover {
  border-bottom: 1px solid #fff;
}
.TextS input[type="text"]:focus {
  width:343px;
  z-index: 1;
  border-bottom: 1px solid #f6a396;
  cursor: text;
}
.TextS input[type="submit"] {
  height: 67px;
  width: 63px;
  display: inline-block;
  color:red;
  float: right;
  background:url(../images/Menu/Search.png) 0% 50% no-repeat;
  text-indent: -10000px;
  border: none;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
  cursor: pointer;
  cursor: pointer;
  transition: opacity .4s ease;
}
.TextS input[type="submit"]:hover {
  opacity: 0.8;
}
@media screen and (min-width:769px) and (max-width:1169px){
.TextS input[type="text"] {
  font-size:31px;
  padding-left: 60px;
}
#wrap {
  margin:81px 100px 50px 69%;
}
}
@media screen and (min-width:435px) and (max-width:768px){
#wrap {
  margin:222px 3% 50px 0%;
  float:right;
}
}
@media screen and (min-width:303px) and (max-width:434px){
#wrap {
  margin:222px 0px 50px 0%;
  float:right;
 }
.TextS input[type="text"]:focus {
  width:278px;
  z-index: 1;
  border-bottom: 1px solid #f6a396;
  cursor: text;
}
}