/* Search icon by IcoMoon, made with http://icomoon.io/app/ */

#wrap {
  margin:5px 20% 50px 10%;
  display: inline-block;
  position: relative;
  height: 60px;
  float: right;
  padding: 0;
 
}
.sb-search {
	position: relative;
	margin-top: 10px;
	width: 0;
	min-width:60px;
	height: 60px;
	float:left;
	overflow: hidden;
	-webkit-transition: width 0.3s;
	-moz-transition: width 0.3s;
	-webkit-backface-visibility: hidden;
	}

.sb-search-input {
	position: absolute;
	top: 0;
	right: 0;
	border: none;
	outline: none;
	background: transparent;
	width: 343px;
	height: 60px;
	margin: 0;
	z-index: 10;
	 padding: 3px;
  padding-right: 60px;
	  font-family: "Lato";
	font-size: 20px;
	 color: #bbb92d;
	display:inline-block;
	
}

.sb-search-input::-webkit-input-placeholder {
	 color: #bbb92d;
}

.sb-search-input:-moz-placeholder {
	 color: #bbb92d;
}

.sb-search-input::-moz-placeholder {
	 color: #bbb92d;
}

.sb-search-input:-ms-input-placeholder {
	 color: #bbb92d;
}

.sb-icon-search,
.sb-search-submit  {
	width: 60px;
	height: 60px;
	display: block;
	position: absolute;
	right: 0;
	top: 0;
	padding: 0;
	margin: 0;
	line-height: 60px;
	text-align: center;
	cursor: text;
	 text-indent: -10000px;
	 float:right;
}

.sb-search-submit {
	background: #fff; /* IE needs this */
	-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)"; /* IE 8 */
    filter: alpha(opacity=0); /* IE 5-7 */
    opacity: 0;
	color: transparent;
	border: none;
	outline: none;
	z-index: 2;
}

.sb-icon-search {
	color: #fff;
	background:url(../images/Menu/Search.png) 0% 50% no-repeat;
	z-index: 90;
	font-size: 22px;
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	-webkit-font-smoothing: antialiased;
	
}

.sb-icon-search:before {
	 background:url(../images/Menu/Search.png) 0% 50% no-repeat;
	 cursor: pointer;
}

/* Open state */
.sb-search.sb-search-open,
.no-js .sb-search {
	width: 343px;
	  border-bottom: 1px solid #bbb92d;
}
.sb-search.sb-search-open:hover,
.no-js .sb-search:hover {
	width: 343px;
	  border-bottom: 1px solid #fff;
}

.sb-search.sb-search-open .sb-icon-search,
.no-js .sb-search .sb-icon-search {
	 background:url(../images/Menu/Search.png) 0% 50% no-repeat;
	color: #fff;
	z-index: 11;
}

.sb-search.sb-search-open .sb-search-submit,
.no-js .sb-search .sb-search-submit {
	z-index: 90;
}
