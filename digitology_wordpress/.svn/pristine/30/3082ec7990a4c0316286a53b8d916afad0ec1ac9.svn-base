@charset "utf-8";
/* CSS Document */

h6{
	font-size:17px;
	line-height:150%;
	font-weight:bold;	
	float:left;
	}
	h5{
	font-size:21px;
	font-weight:bold;	
	float:left;
	padding:30px 0 0;
	}
.gray_table_text thead {
  
    font-size: 16px;
    font-weight: bolder;
}
.gray_table_text {
   border:1px solid #d9e5ee;
    outline: 1px solid #d9e5ee;
    
}
.gray_table_text p{
padding-left:5px;
	
	}
.orange_table{
	border-color: #ffffff;
    border-style: solid;
    border-width: 1px;
    outline: 1px solid #d9e5ee;
	}
	.left_grid{
		width:45%;
		float:left;
		margin-right:15px;
				}
	
	.right_grid{
		width:45%;
		float:left;
		margin-left:15px;
				}
.technology_overview_table{
	border: 1px solid #f0f0f0;
    border-collapse: inherit;
    margin: 20px 0;
   
	}
.technology_overview_table tbody{
	border-top: 1px solid #ccc;
	
	}	
	.technology_overview_table td{
		 border: 1px solid #f0f0f0;
    display: table-cell;
    padding: 5px;
    vertical-align: middle;
		}
.business_1{
	float:left;
	width:30%;
	}
	.business_2{
	float:left;
	width:30%;
	}		
	.business_3{
	float:left;
	width:30%;
	}
	.Procurement_table{
		border: 1px solid #f0f0f0;
		margin-left:5%;		
		}
		.Procurement_table td{
		 border: 1px solid #f0f0f0;
    display: table-cell;
    padding: 5px;
    vertical-align: top;
		}
		.helios_bold18 cite_author{
		 font-family: HeliosCond,Arial,fantasy;
    font-size: 18px;
    font-weight: bold;
	}
	.helios16 cite_author{
		font-family: HeliosCond,Arial,fantasy;
    font-size: 16px;
    font-weight: normal
		}
		.cite{
			background: rgba(0, 0, 0, 0) url("../Images/cite.png") no-repeat scroll left top;
    display: block;
    font-family: Cambria,Calibri,Arial;
    padding: 15px 0 0 77px;
			}
	p.cite_author, .cite_author{
	padding: 0 0 0 77px;
	}
	article .big_mark li{
	background:transparent url("../Images/big_mark.png") no-repeat scroll 5px 5px;
	list-style:outside none none;
	padding:0px 0px 15px 55px;
	}
	.padding_text{
	padding-top:16px;
	padding-bottom:5px;
	}
	.orange_mark li{
	background:transparent url("../Images/orange_mark.png") no-repeat scroll left 7px;
	list-style:outside none none;	
	padding:2px 0px 1px 18px;	
	}
