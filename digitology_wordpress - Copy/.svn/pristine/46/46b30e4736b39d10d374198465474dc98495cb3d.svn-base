@charset "utf-8";

/* CSS Document */



 
/* menu */

/*VERTICAL MENU*/
nav.menu{
  position:relative;
 /* background:#667;*/
}

/* ALL UL */
nav.menu ul{
  list-style: none;
}
/* ALL LI */
nav.menu li{
  position:relative;
}
/* ALL A */
nav.menu a{
  display:block;
  color:#eee;
  text-decoration:none;
  padding:10px 15px;
  transition:0.2s;
}
/* ALL A HOVER */
nav.menu li:hover > a{
 /* background:#778;*/
}

/* INNER UL HIDE */
nav.menu ul ul{
  background:rgba(0,0,0,0.1);
  padding-left:20px;
  transition: max-height 0.2s ease-out;
  max-height:0;
  overflow:hidden;
}
/* INNER UL SHOW */
nav.menu li:hover > ul{
  max-height:500px;
  transition: max-height 0.25s ease-in;
}

/* end menu */

