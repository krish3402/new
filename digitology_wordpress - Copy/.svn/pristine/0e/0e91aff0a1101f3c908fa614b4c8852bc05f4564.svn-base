@charset "utf-8";

/* CSS Document */
.icon-list li:hover ul::-webkit-scrollbar-thumb{
background-color:#B03C3F;
border-radius:10px;
}
.icon-list li:hover ul::-webkit-scrollbar-thumb:hover{
background-color:#BF4649;
border:1px solid #333333;
}
.icon-list li:hover ul::-webkit-scrollbar-thumb:active{
background-color:#A6393D;
border:1px solid #333333;
} 

.icon-list li ul {
  
   
    width:100%;
    max-height:0;
    overflow:hidden;
    -moz-transition: 1s;
    -ms-transition: 1s;
    -o-transition: 1s;
    -webkit-transition: 1s;
    transition: 1s;
}
.icon-list li:hover ul {
   /* overflow:hidden;
    max-height:250px;*/
	
}
 
/* menu */

/*VERTICAL MENU*/
nav.menu{
  position:relative;
 /* background:#667;*/
}

/* ALL UL */
nav.menu ul{
  list-style: none;
}
/* ALL LI */
nav.menu li{
  position:relative;
}
/* ALL A */
nav.menu a{
  display:block;
  color:#eee;
  text-decoration:none;
  padding:10px 15px;
  transition:0.2s;
}
/* ALL A HOVER */
nav.menu li:hover > a{
 /* background:#778;*/
 
}

/* INNER UL HIDE */
nav.menu ul ul{
  background:rgba(0,0,0,0.1);
  padding-left:20px;
  transition: max-height 0.2s ease-out;
  max-height:0;
  overflow:hidden;
}
/* INNER UL SHOW */
nav.menu li:hover > ul{
  max-height:500px;
  transition: max-height 0.25s ease-in;
}

/* end menu */
.list-product-partnumbers
{
	list-style: none;
	
	margin: 0;
	padding: 0;
}

.list-product-partnumbers li
{
	padding: 5px;
	margin: 3px;
	
	border-radius: 6px;
}

.list-product-partnumbers li:hover
{
	background: #FFFCb3;
}

.list-product-partnumbers li a.delete-partnumber
{
